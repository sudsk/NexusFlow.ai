# Database configuration
DB_HOST=127.0.0.1  # Use Cloud SQL proxy for local development
DB_PORT=5432
DB_NAME=nexusflow
DB_USER=nexusflow-user
DB_PASSWORD=SECURE_PASSWORD

# API Keys for LLM providers
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-xxx

# Optional: Google Cloud project ID for Vertex AI
GOOGLE_CLOUD_PROJECT=xxx
GOOGLE_APPLICATION_CREDENTIALS=xxx

# Authentication settings
ADMIN_API_KEY=dev-admin-key  # Change this in production
DISABLE_AUTH=true  # Set to false in production

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging settings
LOG_LEVEL=INFO
